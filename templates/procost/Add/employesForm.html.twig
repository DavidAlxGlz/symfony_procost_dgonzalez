{% extends 'layout.html.twig' %}

{% block title %}FormAdd
{% endblock %}

{% block content %}
	<main class="app-content">
		<div class="app-title">
			<div>
				<h1>
					<i class="fa fa-users"></i>&nbsp;Ajouter un employé</h1>
			</div>
			<ul class="app-breadcrumb breadcrumb">
				<li class="breadcrumb-item">
					<a href="{{ path('app_main') }}">
						<i class="fa fa-home fa-lg"></i>
					</a>
				</li>
				<li class="breadcrumb-item">
					<a href="{{ path('app_employes_list') }}">Employés</a>
				</li>
				<li class="breadcrumb-item">Ajouter un employé</li>
			</ul>
		</div>
		<div class="tile">

			{% for flash_type,messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ flash_type }}" role="alert">
						<button class="close" type="button" data-dismiss="alert">×</button>
						<strong>{{ message }}</strong>

					</div>

				{% endfor %}
			{% endfor %}
			{{ form_start(form) }}
			<section>
				<h3>Informations générales</h3>
				<div class="row mt-4">
					<div class="offset-md-4 col-md-8">
						<div class="form-group row">
							<label class="control-label col-md-3">{{ form_label(form.prenom) }}</label>
							{{ form_errors(form.prenom) }}
							<div class="col-md-9">
								{{ form_widget(form.prenom, {'attr': {'class': 'form-control'} }) }}
							</div>
						</div>
						<div class="form-group row">
							<label class="control-label col-md-3">{{ form_label(form.nom) }}</label>
							{{ form_errors(form.nom) }}
							<div class="col-md-9">
								{{ form_widget(form.nom, {'attr': {'class': 'form-control'} }) }}
							</div>
						</div>
						<div class="form-group row">
							<label class="control-label col-md-3">{{ form_label(form.email) }}</label>
							{{ form_errors(form.email) }}
							<div class="col-md-9">
								{{ form_widget(form.email, {'attr': {'class': 'form-control'} }) }}
								<!-- <div class="form-control-feedback text-danger">Un message d'erreur</div> -->
							</div>
						</div>
					</div>
				</div>
			</section>
			<hr/>
			<section>
				<h3>Production</h3>
				<div class="row mt-4">
					<div class="offset-md-4 col-md-8">
						<div class="form-group row">
							<label for="select-job" class="control-label col-md-3">{{ form_label(form.metier) }}</label>
							{{ form_errors(form.metier) }}
							<div class="col-md-9">
								{{ form_widget(form.metier, {'attr': {'class': 'form-control'} }) }}
							</div>
						</div>
						<div class="form-group row">
							<label class="control-label col-md-3">{{ form_label(form.coutHoraire) }}</label>
							{{ form_errors(form.coutHoraire) }}
							<div class="col-md-9">
								{{ form_widget(form.coutHoraire, {'attr': {'class': 'form-control'} }) }}
							</div>
						</div>
						<div class="form-group row">
							<label class="control-label col-md-3">{{ form_label(form.dateEmbauche) }}</label>
							{{ form_errors(form.dateEmbauche) }}
							<div class="col-md-9">
								{{ form_widget(form.dateEmbauche, {'attr': {'class': 'form-control'} }) }}
							</div>
						</div>
					</div>
				</div>
			</section>
			<hr/>
			<div class="row">
				<div class="offset-md-6 col-md-6">
					<button type="submit" class="btn btn-success">
						<i class="fa fa-save"></i>Enregistrer</a>
				</div>
			</div>
			{{ form_end(form) }}
		</div>
	</main>

{% endblock %}
