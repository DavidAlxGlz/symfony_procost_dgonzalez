{% extends 'layout.html.twig' %}

{% block title %}Form
{% endblock %}

{% block content %}
	<main class="app-content">
		<div class="app-title">
			<div>
				<h1>
					<i class="fa fa-book"></i>&nbsp;Edition d'un Metier</h1>
			</div>
			<ul class="app-breadcrumb breadcrumb">
				<li class="breadcrumb-item">
					<a href="{{ path('app_main') }}">
						<i class="fa fa-home fa-lg"></i>
					</a>
				</li>
				<li class="breadcrumb-item">
					<a href="{{ path('app_metiers_list') }}">Metiers</a>
				</li>
				<li class="breadcrumb-item">Edition d'un Metier</li>
			</ul>
		</div>
		<div class="tile">
			{% for flash_type,messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ flash_type }}" role="alert">
						<button class="close" type="button" data-dismiss="alert">×</button>
						<strong>{{ message }}</strong>
					</div>
				{% endfor %}
			{% endfor %}
			{{ form_start(form) }}
			<section>
				<h3>Informations générales</h3>
				<div class="row mt-4">
					<div class="offset-md-4 col-md-8">
						<div class="form-group row">
							<label class="control-label col-md-3">{{ form_label(form.nom) }}</label>
                            {{ form_errors(form.nom) }}
							<div class="col-md-9">
								{{ form_widget(form.nom, {'attr': {'class': 'form-control'} }) }}
							</div>
						</div>
					</div>
				</div>
			</section>
			<hr/>
			<div class="row">
				<div class="offset-md-6 col-md-6">
					<button type="submit" class="btn btn-success">
						<i class="fa fa-save"></i>Enregistrer</a>
				</div>
			</div>
			{{ form_end(form) }}
		</div>
	</main>

{% endblock %}
