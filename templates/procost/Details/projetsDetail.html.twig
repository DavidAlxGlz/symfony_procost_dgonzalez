{% extends 'layout.html.twig' %}

{% block title %}Detail
{% endblock %}

{% block content %}
        <main class="app-content">
            <div class="app-title">
                <div>
                    <h1><i class="fa fa-laptop"></i>&nbsp;Suivi de {{ projetDetails.nom|upper }}</h1>
                </div>
                <ul class="app-breadcrumb breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_main') }}"><i class="fa fa-home fa-lg"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_projets_list') }}">Projets</a>
                    </li>
                    <li class="breadcrumb-item">Suivi de {{ projetDetails.nom|upper }}</li>
                </ul>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="tile">
                        <table class="table table-striped table-bordered table-sm">
                            <tbody>
                                <tr>
                                    <th>Nom</td>
                                    <td>{{ projetDetails.nom|upper }}</td>
                                </tr>
                                <tr>
                                    <th>Description</td>
                                    <td>{{ projetDetails.description }}</td>
                                </tr>
                                <tr>
                                    <th>Prix de Vente</td>
                                    <td>{{ projetDetails.prixVente|format_currency('EUR') }}</td>
                                </tr>
                                <tr>
                                    <th>Date de Creation</td>
                                    <td>{{ projetDetails.dateCreation|date('d/m/Y') }}</td>
                                </tr>
                                <tr>
                                    <th>Date de Livraison</td>
                                    <td>{{ projetDetails.dateLivraison|date('d/m/Y') }}</td>
                                </tr>
                            </tbody>
                        </table>
                        <a href="{{ path('app_projets_form',{'id': projet}) }}" class="btn btn-info">
                            <i class="fa fa-pencil"></i>Modifier
                        </a>
                    </div>
                    <div class="tile">
                        <h3 class="title-title mb-4">Ajouter un temps</h3>
                        <form class="form-horizontal">
                            <div class="form-group row">
                                <label for="select-projects" class="control-label col-md-6">Employe</label>
                                <div class="col-md-6">
                                    <select class="form-control" id="select-projects">
                                    {% for employe in employes %}
                                        <option>{{ employe.prenom }} {{ employe.nom }}</option>
                                    {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="days-count" class="control-label col-md-6">Nombre de hours</label>
                                <div class="col-md-6">
                                    <input id="days-count" class="form-control" type="number" min="1">
                                </div>
                            </div>
                            <div class="row">
                                <div class="offset-md-6 col-md-8">
                                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Enregistrer</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="tile pb-5">
                        <h3 class="tile-title">Historique des temps de production</h3>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover table-sm">
                                <thead>
                                    <tr>
                                        <th>Employe</th>
                                        <th>Temps / hours</th>
                                        <th>Date de saisie</th>
                                        <th>Co√ªt total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for hora in horas %}
                                        <tr>
                                        <td>{{ hora.prenom }}</td>
                                        <td>{{ hora.hours }}</td>
                                        <td>{{ hora.dateSaisie|date('d-m-Y') }}</td>
                                        <td>{{ hora.cout|format_currency('EUR') }}</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <hr/>
                        <nav class="float-right">
                            <ul class="pagination">
                                <li class="page-item disabled">
                                    <span class="page-link">&laquo;</span>
                                </li>
                                <li class="page-item active" aria-current="page">
                                    <span class="page-link">1<span class="sr-only">(current)</span></span>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#">2</a></li>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#">3</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#">&raquo;</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </main>
        
{% endblock %}
