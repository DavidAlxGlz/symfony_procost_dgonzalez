{% extends 'base.html.twig' %}


{% block body %}
	<!-- Navbar -->
	<header class="app-header">
		<a class="app-header__logo" href="{{ path('app_main') }}">Procost</a>
		<a class="app-sidebar__toggle" href="#" data-toggle="sidebar" aria-label="Hide Sidebar"></a>
		<!-- Navbar Right Menu-->
		<ul class="app-nav">
			<li class="app-search">
				<a href="{{ path('app_logout') }}" class="btn btn-info">Se déconnecter</a>
			</li>
		</ul>
	</header>

	<!-- Sidebar menu-->
	<div class="app-sidebar__overlay" data-toggle="sidebar"></div>
	<aside class="app-sidebar">
		<div class="app-sidebar__user">
			<img class="app-sidebar__user-avatar" src="{{ asset('img/user.jpg') }}" alt="User Image">
			<div>
				<p class="app-sidebar__user-name">
					{% if is_granted('IS_AUTHENTICATED_FULLY') %}
							{{ app.user.username }}
					{% endif %}
				</p>
				{% if is_granted('ROLE_ADMIN') %}
				<p class="app-sidebar__user-designation">Manager</p>
				{% endif %}
				{% if is_granted('ROLE_EMPLOYE') %}
				<p class="app-sidebar__user-designation">EMPLOYE</p>
				{% endif %}
			</div>
		</div>
		<ul class="app-menu">
			<li>
				<a class="app-menu__item active" href="{{ path('app_main') }}">
					<i class="app-menu__icon fa fa-dashboard"></i>
					<span class="app-menu__label">Tableau de bord</span>
				</a>
			</li>
			<li>
				<a class="app-menu__item" href="{{ path('app_projets_list') }}">
					<i class="app-menu__icon fa fa-laptop"></i>
					<span class="app-menu__label">Projets</span>
				</a>
			</li>
			<li>
				<a class="app-menu__item" href="{{ path('app_employes_list') }}">
					<i class="app-menu__icon fa fa-users"></i>
					<span class="app-menu__label">Employés</span>
				</a>
			</li>
			<li>
				<a class="app-menu__item" href="{{ path('app_metiers_list') }}">
					<i class="app-menu__icon fa fa-book"></i>
					<span class="app-menu__label">Métiers</span>
				</a>
			</li>
		</ul>
	</aside>
	{% block content %}{% endblock %}
	<footer class="main-footer">
		<p>Copyright &copy; Shoefony
			{{ 'now'|date('Y') }}</p>
	</footer>
{% endblock %}
